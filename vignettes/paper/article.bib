mendeley-groups = {Dose-finding},
month = {sep},
number = {3},
pages = {925--37},
pmid = {2790129},
title = {{Design and analysis of phase I clinical trials.}},
url = {http://www.jstor.org/stable/2531693 http://www.ncbi.nlm.nih.gov/pubmed/2790129},
volume = {45},
year = {1989}
}

