issn = {0883-4237},
journal = {Statistical Science},
keywords = {Adaptive design, Bayesian design, clinical trial,,adaptive design,and phrases,bayesian design,clinical trial,dose-finding,ii trial,phase i,phase i trial},
number = {2},
pages = {227--244},
